<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com"/>
    <import resource="spring-config-common.xml" />
    <import resource="spring-config-service.xml" />
    <import resource="spring-config-quartz.xml" />
    <import resource="spring-config-aspects.xml"/>
    <import resource="spring-config-interceptor.xml"/>
    <import resource="spring-config-activemq.xml" />
</beans>